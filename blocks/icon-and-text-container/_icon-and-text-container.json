{
  "definitions": [
    {
      "title": "Icon and Text Container",
      "id": "icon-and-text-container",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Icon and Text Container",
              "model": "icon-and-text-container",
              "filter": "icon-and-text-container",
              "classes": "layout-1-col",
              "alignment": "top-aligned"
            }
          }
        }
      }
    },
    {
      "title": "Icon and Text",
      "id": "icon-and-text",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Icon and Text",
              "model": "icon-and-text",
              "item_headingType": "h3"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "icon-and-text-container",
      "fields": [
        {
          "component": "select",
          "name": "classes",
          "value": "layout-1-col",
          "label": "Layout",
          "options": [
            { "name": "1 Column", "value": "layout-1-col" },
            { "name": "2 Columns", "value": "layout-2-col" },
            { "name": "3 Columns", "value": "layout-3-col" },
            { "name": "4 Columns", "value": "layout-4-col" }
          ]
        },
        {
          "component": "select",
          "name": "alignment",
          "value": "top-aligned",
          "label": "Icon Alignment",
          "options": [
            { "name": "Left", "value": "left-aligned" },
            { "name": "Top", "value": "top-aligned" }
          ],
          "condition": {
            "or": [
              { "===": [{ "var": "classes" }, "layout-1-col"] },
              { "===": [{ "var": "classes" }, "layout-2-col"] }
            ]
          }
        }
      ]
    },
    {
      "id": "icon-and-text",
      "fields": [
        {
          "component": "tab",
          "label": "Asset",
          "name": "tab-asset"
        },
        {
          "component": "custom-icon-picker",
          "name": "iconPicker",
          "label": "Icon",
          "placeholder": "placeholder",
          "configUrl": "/content/dam/image.config.json",
          "valueType": "string",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "iconAltText",
          "label": "Alternative text for accessibility",
          "condition": { "===": [{ "var": "iconAltTextHide" }, false] },
          "description": "Write descriptive, concise, relevant alt text to describe the image in context, enhancing accessibility for visually impaired users and improving SEO.",
          "value": ""
        },
        {
          "component": "boolean",
          "label": "Don't provide an alternative text",
          "name": "iconAltTextHide",
          "description": "Leave alt text empty for images that add no meaning or value. Marking them as decorative ensures assistive technologies ignore them.",
          "value": true
        },
        {
          "component": "tab",
          "label": "Text",
          "name": "tab-text"
        },
        {
          "component": "text",
          "name": "item_heading",
          "label": "Title",
          "valueType": "string",
          "value": ""
        },
        {
          "component": "select",
          "name": "item_headingType",
          "value": "h3",
          "label": "Heading Type",
          "valueType": "string",
          "options": [
            { "name": "H2", "value": "h2" },
            { "name": "H3", "value": "h3" },
            { "name": "H4", "value": "h4" }
          ]
        },
        {
          "component": "richtext",
          "name": "item_description",
          "label": "Text",
          "valueType": "string",
          "value": ""
        },
        {
          "component": "tab",
          "label": "Links",
          "name": "tab-links"
        },
        {
          "component": "aem-content",
          "valueType": "string",
          "name": "item_cta1",
          "label": "Link 1",
          "value": ""
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "item_cta1Text",
          "label": "CTA Text 1",
          "value": ""
        },
        {
          "component": "aem-content",
          "valueType": "string",
          "name": "item_cta2",
          "label": "Link 2",
          "value": ""
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "item_cta2Text",
          "label": "CTA Text 2",
          "value": ""
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "icon-and-text-container",
      "components": ["icon-and-text"]
    }
  ]
}
