{
  "definitions": [
    {
      "title": "Link List",
      "id": "link-list",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Link List",
              "model": "link-list",
              "filter": "link-list",
              "headingType": "h2",
              "heading": "Heading",
              "childPagesOrderBy": "jcr:title",
              "childPagesSortOrder": "ascending",
              "classes": "hyper-links"
            }
          }
        }
      }
    },
    {
      "title": "Link",
      "id": "link",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Link",
              "model": "link"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "link-list",
      "fields": [
        {
          "component": "text",
          "name": "heading",
          "label": "Heading",
          "required": true,
          "valueType": "string"
        },
        {
          "component": "select",
          "name": "headingType",
          "label": "Heading Level",
          "required": true,
          "value": "",
          "valueType": "string",
          "options": [
            {
              "name": "H2",
              "value": "h2"
            },
            {
              "name": "H3",
              "value": "h3"
            },
            {
              "name": "H4",
              "value": "h4"
            }
          ]
        },
        {
          "component": "select",
          "name": "buildListUsingType",
          "label": "Build List Using",
          "required": true,
          "value": "",
          "valueType": "string",
          "options": [
            {
              "name": "Child Pages",
              "value": "childPages"
            },
            {
              "name": "Fixed List",
              "value": "fixedList"
            }
          ]
        },
        {
          "component": "aem-content",
          "name": "childPagesParentPage",
          "value": "",
          "label": "Parent Page",
          "description": "Leave empty to use current page. Max depth 1 level",
          "valueType": "string",
          "validation": {
            "rootPath": "/content/qcom"
          },
          "condition": { "===": [{ "var": "buildListUsingType" }, "childPages"] }
        },
        {
          "component": "select",
          "name": "childPagesOrderBy",
          "label": "Order by",
          "required": true,
          "valueType": "string",
          "options": [
            {
              "name": "Title",
              "value": "jcr:title"
            },
            {
              "name": "AEM Page Path",
              "value": "pagePath"
            }
          ],
          "condition": { "===": [{ "var": "buildListUsingType" }, "childPages"] }
        },
        {
          "component": "select",
          "name": "childPagesSortOrder",
          "label": "Sort Order",
          "required": true,
          "valueType": "string",
          "options": [
            {
              "name": "Ascending",
              "value": "ascending"
            },
            {
              "name": "Descending",
              "value": "descending"
            }
          ],
          "condition": { "===": [{ "var": "buildListUsingType" }, "childPages"] }
        },
        {
          "component": "aem-content",
          "name": "childPagesExcludeUrl",
          "value": "",
          "label": "Exclude Pages",
          "description": "Click 'Add' and select pages to exclude from the list",
          "valueType": "string[]",
          "multi": true,
          "validation": {
            "rootPath": "/content/qcom"
          },
          "condition": { "===": [{ "var": "buildListUsingType" }, "childPages"] }
        },
        {
          "component": "select",
          "name": "classes",
          "label": "Style",
          "value": "hyper-links",
          "valueType": "string",
          "required": true,
          "options": [
            {
              "name": "Hyperlinks",
              "value": "hyper-links"
            },
            {
              "name": "Simple Links (For Region Selection)",
              "value": "simple-links"
            }
          ]
        }
      ]
    },
    {
      "id": "link",
      "fields": [
        {
          "component": "aem-content",
          "name": "link",
          "label": "URL",
          "valueType": "string",
          "value": "",
          "required": true
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "linkText",
          "label": "CTA Text",
          "value": ""
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "link-list",
      "components": ["link"]
    }
  ]
}
